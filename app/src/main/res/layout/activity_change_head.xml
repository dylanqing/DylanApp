<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:civ="http://schemas.android.com/apk/res-auto"
    xmlns:titleView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.worldunion.dylanapp.widget.title.TitleView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        titleView:centerDesc="@string/my_change_head"
        titleView:leftImage="@drawable/icon_back"/>


    <com.worldunion.dylanapp.widget.CircleImageView
        android:id="@+id/civHead"
        android:layout_width="@dimen/dim180"
        android:layout_height="@dimen/dim180"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim40"
        android:src="@drawable/customer_add_head"
        civ:border_color="@color/white"
        civ:border_width="@dimen/dim6"
        />




</LinearLayout>