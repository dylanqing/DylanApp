<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/txt28px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:background="@color/contact_top_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dim30"
        android:text="温馨提示：请从列表中勾选1名紧急联系人"
        android:textColor="@color/contact_top_txt" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ListView
            android:id="@+id/lvContact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/tvSideBarBg"
            android:layout_width="@dimen/dim100"
            android:layout_height="@dimen/dim100"
            android:layout_gravity="center"
            android:background="@drawable/shape_contact_sidebar_middle_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt42"
            android:visibility="gone" />

        <com.worldunion.dylanapp.widget.SideBar
            android:id="@+id/sideBar"
            android:layout_width="@dimen/dim40"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dim40"
            android:layout_marginTop="@dimen/dim20" />

    </FrameLayout>



</LinearLayout>