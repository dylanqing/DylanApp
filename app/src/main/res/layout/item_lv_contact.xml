<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/city_item_title"
        style="@style/txt24px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim60"
        android:background="@color/white"
        android:enabled="false"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dim30"
        android:textColor="@color/my_txt_color"
        android:visibility="gone"
        tools:text="H"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/city_item_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim110"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dim30"
        android:textColor="@color/banner_txt_color"
        android:textSize="@dimen/txt44"
        tools:text="hahahah"/>

    <View
        android:id="@+id/city_item_grey_line"
        style="@style/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>