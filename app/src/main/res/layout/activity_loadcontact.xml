<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titleView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.worldunion.dylanapp.widget.title.TitleView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        titleView:centerDesc="@string/my_loadcontact"
        titleView:leftImage="@drawable/icon_back"/>

    <Button
        android:id="@+id/btnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim40"
        android:background="@drawable/selector_common_grey_bg"
        android:padding="@dimen/dim40"
        android:text="调用系统打开联系人"/>

    <Button
        android:id="@+id/btnCustomClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim40"
        android:background="@drawable/selector_common_grey_bg"
        android:padding="@dimen/dim40"
        android:text="调用自定义通讯里打开联系人"/>


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim40"
        android:gravity="center"
        android:text="name"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim40"
        android:gravity="center"
        android:text="phone"/>



</LinearLayout>