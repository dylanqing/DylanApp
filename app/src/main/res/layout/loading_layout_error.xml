<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        style="@style/horizontal_line2"
        android:layout_height="@dimen/dim40" />

    <ImageView
        android:id="@+id/error_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim200"
        android:layout_gravity="center"
        android:src="@drawable/loading_layout_error" />

    <TextView
        android:id="@+id/btn_error_retry"
        style="@style/txt28px"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim20"
        android:padding="@dimen/dim20"
        android:text="@string/common_error"
        android:textColor="@color/grey_txt_color" />

</LinearLayout>