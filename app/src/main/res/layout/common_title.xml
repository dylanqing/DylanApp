<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dim88"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.worldunion.dylanapp.widget.title.ImgTxtButton
            android:id="@+id/view_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim1"
            android:background="@drawable/selector_common_grey_bg" />

        <com.worldunion.dylanapp.widget.title.ImgTxtButton
            android:id="@+id/view_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view_right"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dim1"
            android:background="@drawable/selector_common_grey_bg" />

        <com.worldunion.dylanapp.widget.title.ImgTxtButton
            android:id="@+id/view_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dim1"
            android:background="@drawable/selector_common_grey_bg" />

        <TextView
            android:id="@+id/view_center"
            style="@style/txt34px"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim70"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true" />
    </RelativeLayout>

    <View style="@style/horizontal_line" />

</LinearLayout>